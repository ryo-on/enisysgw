<div class="piece prop index">
  <div class="pieceHeader">
    <%= render :partial => 'piece_header' -%>
  </div>
  <div class="pieceBody">
    <div class="pieceBodyHeader">
      <%= render(:partial => '/gw/admin/prop_others/prop_master_menu') %>
      <%= render(:partial => '/gw/admin/prop_others/titleline') %>
    </div>
    <div class="pieceBodyBody">
      <%= div_notice %>
      <div class="editingBox">
        <span class="btEdit">
          <%= link_to "編集", :action => :edit, :id => @groupitem.id %>
        </span>
        <span class="btDestroy">
          <%= link_to_destroy @groupitem.id, :confirm => "本当に削除しますか？" %>
        </span>
      </div>
      <table class="show">
        <tbody><tr>
          <th>施設グループ名</th><td><%= @groupitem.name %></td>
        </tr>
        <tr>
          <th>親グループ名</th>
          <% @parent.each do | pare| -%>
            <% if @groupitem.parent_id==pare.id -%>
              <td><%= pare.name -%></td>
            <% end %>
          <% end %>
        </tr>
        <tr>
          <th>並び順</th><td><%= @groupitem.sort_no %></td>
        </tr>
      </tbody></table>
      <div class="btReturn">
        <%= link_to '一覧へ戻る', '/gw/prop_groups' %>
      </div>
    </div>
  </div>
</div>
