<%
  #本来は一ヶ所で判別するのが良いが、変更の過渡期なのでわけてある。
  files_uri = gwboard_attachments_path(item.id) + "?system=#{item.system_name}&title_id=#{item.title_id}"
%>
<% if request.path_info.include?("gwbbs/docs/forward") || params[:request_path].present? %>
  <table class="bbsFile" style="width: 100%;">
<% else %>
  <table class="bbsFile">
<% end %>
  <tr>
    <th>添付ファイル</th>
    <td>
      <a href="#" id="open_close" onclick="chageDisp(this,'attach_form');return false;">開く▼</a>
    </td>
  </tr>
</table>

<table id="attach_form" border="0" class="show" style="display: none;">
  <tr>
    <td>
      <iframe src="<%= files_uri %>" frameborder="0"></iframe>
    </td>
  </tr>
</table>
