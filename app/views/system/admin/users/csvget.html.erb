<div class="piece AdminSetting AdminUsers">
<%= render :partial => 'header' %>
  <div class="pieceBody">
    <%= render :partial => '/system/admin/users/header_menu' %>
    <%= render :partial => '/system/admin/users/csv_menu' %>
    <h3><%= t("rumi.config_settings.base.user_and_group.csv.feature.output.name") %></h3>
    <div class="user_explanation">
      <%=raw t("rumi.config_settings.base.user_and_group.csv.feature.output.message.note") %>
    </div>
    <%= form_tag csvget_system_users_path, {:method => :get, :multipart => true} do %>
    <%= error_messages_for "item" %>
    <%= hidden_field_tag('item[csv]', @item.csv) %>
    <table class="show">
      <tr>
        <th></th>
        <td><%= t("rumi.config_settings.base.user_and_group.csv.feature.output.message.help") %></td>
      </tr>
      <tr>
        <th><%= RumiHelper::CsvForm.human_attribute_name(:nkf) %></th>
        <td>
          <%= radio_button_tag('item[nkf]', 'utf8', @item.utf8?) %><label for="item_nkf_utf8">UTF8</label>
          <%= radio_button_tag('item[nkf]', 'sjis', @item.sjis?) %><label for="item_nkf_sjis">SJIS</label>
        </td>
      </tr>
    </table>
    <div class="submitters">
      <%= submit_tag t("rumi.config_settings.base.user_and_group.csv.feature.output.name") %>
    </div>
    <% end %>
  </div>
</div>