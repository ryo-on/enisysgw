<%= hidden_field_tag :parent, @parent.id %>
<%= f.hidden_field  :parent_id    ,:value=>@parent.id %>
<%= f.hidden_field  :level_no     ,:value=>@parent.level_no.to_i + 1 %>
<%= f.hidden_field  :ldap_version ,:value=>@item.ldap_version %>
<%= f.hidden_field  :version_id   ,:value=>@item.version_id %>
<%= Gw.required_head %>
<table class="show">
  <tr>
    <th><%= System::Group.human_attribute_name(:state) %><%= Gw.required %></th>
    <td><%= f.radio_buttons :state, Gw.yaml_to_array_for_select('system_states'), :class => 'status' %></td>
  </tr>
  <tr>
    <th><%= System::Group.human_attribute_name(:category) %><%= Gw.required %></th>
    <td><%= f.radio_buttons :category, Gw.yaml_to_array_for_select('system_groups_categories'), :class => 'status' %></td>
  </tr>
  <!--
  <tr>
    <th><%#= System::Group.human_attribute_name(:ldap) %><%#= Gw.required %></th>
    <td><%#= f.radio_buttons :ldap, Gw.yaml_to_array_for_select('system_users_ldaps'), :class => 'status' %></td>
  </tr>
  -->
  <%= f.hidden_field :ldap, :value => "0" %>
  <tr>
    <th><%= System::Group.human_attribute_name(:code) %><%= Gw.required %></th>
    <td><%= f.text_field :code, :class => 'num name' %></td>
  </tr>
  <tr>
    <th><%= System::Group.human_attribute_name(:name) %><%= Gw.required %></th>
    <td><%= f.text_field :name, :class => 'name' %></td>
  </tr>
  <tr>
    <th><%= System::Group.human_attribute_name(:name_en) %></th>
    <td><%= f.text_field :name_en, :class => 'name' %></td>
  </tr>
  <tr>
    <th><%= System::Group.human_attribute_name(:email) %></th>
    <td><%= f.text_field :email, :class => 'string email', :style => 'width: 400px;' %></td>
  </tr>
  <tr>
    <th><%= System::Group.human_attribute_name(:sort_no) %><%= Gw.required %></th>
    <td><%= f.text_field :sort_no, :class => 'num' %></td>
  </tr>
  <tr>
    <th><%= System::Group.human_attribute_name(:start_at) %><%= Gw.required %></th>
    <td><%= f.calendar_date_select :start_at, :time => false %></td>
  </tr>
  <tr>
    <th><%= System::Group.human_attribute_name(:end_at) %></th>
    <td><%= f.calendar_date_select :end_at, :time => false %></td>
  </tr>
  <tr>
    <th><%= System::Group.human_attribute_name(:level_no) %></th><td><%= @item.level_no %></td>
  </tr>
  <tr>
    <th><%= System::Group.human_attribute_name(:parent_id) %></th>
    <td><%= @item.parent.ou_name %></td>
  </tr>
</table>
<%= raw(gw_js_include_full) %>
