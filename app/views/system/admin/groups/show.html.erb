<div class="piece AdminSetting AdminGroups">
<%= render :partial => 'header' %>
  <div class="pieceBody">
    <%= render :partial => '/system/admin/users/header_menu' %>
    <%= render :partial => 'switching' %>
    <%= render :partial => 'navi' %>
    <%= div_notice %>
    <div class="editingBox">
      <span class="btEdit">
      <%= action_menu :edit %>
      </span>
      <span class="btDestroy">
      <%= action_menu :destroy %>
      </span>
    </div>

    <div><%=raw t("rumi.config_settings.base.user_and_group.group.message.destroy") %></div>

    <table class="show">
      <tbody>
        <tr>
          <th><%= System::Group.human_attribute_name(:state) %></th>
          <td><%= System::UsersGroup.state_show(@item.state) %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:category) %></th>
          <td><%= System::Group.category_show(@item.category) %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:ldap) %></th>
          <td><%= System::Group.ldap_show(@item.ldap) %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:code) %></th>
          <td><%= @item.code %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:name) %></th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:name_en) %></th>
          <td><%= @item.name_en %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:email) %></th>
          <td><%= @item.email %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:sort_no) %></th>
          <td><%= @item.sort_no %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:start_at) %></th>
          <td><%= Gw.date_str(@item.start_at) %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:end_at) %></th>
          <td><%= Gw.date_str(@item.end_at) %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:level_no) %></th>
          <td><%= @item.level_no %></td>
        </tr>
        <tr>
          <th><%= System::Group.human_attribute_name(:parent_id) %></th>
          <td><%= safe{@item.parent.ou_name} %></td>
        </tr>
      </tbody>
    </table>

    <div class="btReturn">
      <%=link_to '戻る', system_groups_path(@parent) %>
    </div>
  </div>
</div>
