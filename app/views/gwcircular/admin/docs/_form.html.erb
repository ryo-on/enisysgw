
<% _path = '/_attachs/gwcircular/'%>
<%
  if @item.blank?
    mce_base_url = ''
  else
    mce_base_url = _path + sprintf("%06d", @item.title_id) + '/' + @item.name + "/" unless @item.name.blank?
  end

  mode = 'return_edit'
%>
<%= tool_tiny_mce(mce_base_url) %>

<%= raw(gw_js_include_full) %>

<div class="notice"><%= flash[:notice] %></div>

<table class="show bbsText">
  <tr>
    <th>返信欄</th>
  </tr>
  <tr>
    <td><%= f.text_area :body, :cols => '140', :rows => "1", :style => 'width:100%; height:45px'%></td>
  </tr>
</table>

<%= gwcircular_attachments_form(f, @item, mode)%>

<script type="text/javascript">
