<h3 class="iconSideGroup">所属<span class="<%= 'current' if params[:category] == 'GROUP'%>"><%=link_to('所属', "#{gwcircular_menus_path}?category=GROUP&cond=#{params[:cond]}")%></span></h3>
<ul>
<% for grp_item in @groups %>
  <%
    str_count = ''
    str_count = "(#{grp_item.cnt.to_s})" unless grp_item.cnt.blank?
    group_name = "・#{get_current_group_name(grp_item.createrdivision_id)}#{str_count}"
  %>
  <% unless str_count.blank? %>
    <li><%= link_to group_name, "#{gwcircular_menus_path}?category=GROUP&grp=#{grp_item.createrdivision_id}&cond=#{params[:cond]}" %></li>
  <% end %>
<% end %>
</ul>
