<div class="bbsDocList circular">
<%= render :partial => 'piece_header' %>

<div class="pieceBody">
<div class="editingBox">
  <span class="btEdit"><%= link_to '編集', edit_gwcircular_basic_path %></span>
  <span class="docLink"><%= link_to '公開画面へ >>', "/gwcircular/" %></span>
</div>

<!--
<table class="show">
<tr>
  <th>状態</th>
  <td><%#= @item.states[@item.state] %></td>
</tr>
</table>
-->
<table class="show">
<!--
<tr>
  <th>回覧板タイトル</th>
  <td><%#= @item.title%></td>
</tr>
-->
<tr>
  <th>一覧表示行数</th>
  <td><%= @item.default_limit %></td>
</tr>
<tr>
  <th>回覧期限日初期値</th>
  <td><%= @item.default_published %>日間</td>
</tr>
<tr>
  <th>回覧人数制限</th>
  <td><%= @item.commission_limit %>人</td>
</tr>
<tr>
  <th>期限切れ削除設定</th>
  <td><%= @item.delete_date_setting_states[@item.limit_date] %></td>
</tr>
</table>

<table class="show">
<tr>
  <th>管理部門</th>
  <td>
  <% for admingrp in @admingrps %>
  <%= admingrp[2] %><br />
  <% end if @admingrps %>
  </td>
</tr>
<tr>
  <th>管理者</th>
  <td>
  <% for adm in @adms %>
  <%= adm[2] %><br />
  <% end if @adms %>
  </td>
</tr>
<tr>
  <th>編集部門設定</th>
  <td>
  <% for editor in @editors %>
  <%= editor[2] %><br />
  <% end if @editors %>
  </td>
</tr>
<tr>
  <th>編集者設定</th>
  <td>
  <% for sueditor in @sueditors %>
  <%= sueditor[2] %><br />
  <% end if @sueditors %>
  </td>
</tr>
<tr hidden>
<%#*GW2.0では設定が反映されない項目%>
  <th>閲覧部門設定</th>
  <td>
  <% for reader in @readers %>
  <%= reader[2] %><br />
  <% end if @readers %>
  </td>
</tr>
<tr hidden>
<%#*GW2.0では設定が反映されない項目%>
  <th>閲覧者設定</th>
  <td>
  <% for sureader in @sureaders %>
  <%= sureader[2] %><br />
  <% end if @sureaders %>
  </td>
</tr>
</table>
<div class="btReturn">
  <%= link_to '回覧板一覧へ戻る', "/gwcircular/" %>
</div>

</div><!--pieceBody-->
</div><!--bbsDocList circular-->

