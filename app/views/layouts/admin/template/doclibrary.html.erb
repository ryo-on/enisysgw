<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja" lang="ja">
<head>
<%= render :partial => 'layouts/admin/gw/header_tag' %>
<link rel="stylesheet" type="text/css" href="/layout/doclibrary/style.css" />
<link rel="stylesheet" type="text/css" href="/_common/themes/gw/css/style.css" />
</head>
<body <%= Page.body_id %>>
<div id="container">

<%= render :partial => 'layouts/admin/gw/piece_header' %>
<!--ここからバナー-->
<div id="banner">
<div id="bannerBody">
<%= render_component :controller => 'gw/admin/piece/header_menus', :action => 'index', :piece_param => '61' %>
</div>
</div>
<!--ここまでバナー-->

<!--ここからナビ-->
<div id="navi">
<div id="naviBody">

</div>
</div>
<!--ここまでナビ-->

<!--ここからナビ2-->
<div id="navi2">
<div id="navi2Body">
</div>
</div>
<!--ここまでナビ-->
<!--ここからメインコンテンツ-->
<div id="main">
<div id="wrapper">
<!--ここからコンテンツ-->
<div id="content">
<div id="contentContainer">
<div id="contentHeader"></div>

<!--書庫バナー-->

<div id="contentBody">

<div class="doclibraryDocList">
<div id="FreezePane" class="FreezePaneOff">
   <div id="InnerFreezePane" class="InnerFreezePane"> </div>
</div>
<div class="pieceHeader">
<h2><%= I18n.t('activerecord.models.doclibrary/category') %></h2>
</div><!--pieceHeader-->

<%= render_component :controller => 'doclibrary/admin/piece/banners', :action => 'index', :params => params, :piece_param => "TitleDisplayMode" %>

<div class="pieceBody">
<div id="FreezePane" class="FreezePaneOff">
   <div id="InnerFreezePane" class="InnerFreezePane"> </div>
</div>
<%= render_component :controller => 'doclibrary/admin/piece/menus', :action => 'index', :params => params %>
<div class="outer">
<div class="right">

<div class="inner">
<%= yield %>
</div>

</div><!--right-->
</div><!--outer-->
</div><!--pieceBody-->
</div><!--bbsDocList-->
</div>
<div id="contentFooter"></div>
</div>
</div>
<!--ここまでコンテンツ-->
<!--ここから左サイド-->
<div id="menu">
<div id="menuContainer">
<div id="menuHeader"></div>
<div id="menuBody">

</div>
<div id="menuFooter"></div>
</div>
</div>
<!--ここまで左サイド-->
</div>
<!--ここから右サイド-->
<div id="links">
<div id="linksContainer">

<div id="linksHeader"></div>
<div id="linksBody">右サイド</div>
<div id="linksFooter"></div>

</div>
</div>
<!--ここまで右サイド-->
</div>
<!--ここまでメインコンテンツ-->

<%= render :partial => 'layouts/admin/gw/piece_footer' %>

</div>
</body>

<%= javascript_tag do -%>
  <% if @is_category_index_form && @has_some_folder_admin %>
    // == 索引ツリーフォルダーのドラッグ＆ドロップ、ファイルのドラッグ＆ドロップ ==
    // 初期化時の処理
    jQuery(document).ready(function () {
      new rumi.dragdrop('<%=raw escape_javascript('/doclibrary/docs/files_drag') %>',
                        '<%=raw escape_javascript('/doclibrary/docs/folder_drag') %>');
    });

    // 索引ツリー更新時の処理
    jQuery(document).ajaxComplete(function () {
      new rumi.dragdrop('<%=raw escape_javascript('/doclibrary/docs/files_drag') %>',
                        '<%=raw escape_javascript('/doclibrary/docs/folder_drag') %>');
    });
  <% end %>
<% end -%>
</html>